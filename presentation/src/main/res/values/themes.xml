<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RecipeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/shakespeare</item>
        <item name="colorPrimaryVariant">@color/shakespeare</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/shakespeare</item>
        <item name="colorSecondaryVariant">@color/shakespeare</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RecipeApp1" parent="Base.Theme.RecipeApp" />

    <style name="RecipeCardStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">16dp</item>
    </style>

    <style name="IngredientCardStyle">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/profile_blue</item>
    </style>
</resources>