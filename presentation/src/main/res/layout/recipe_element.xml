<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/RecipeCardStyle"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="@drawable/round_outline"
    android:layout_marginHorizontal="24dp"
    app:cardCornerRadius="18dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recipe_iv"
            android:layout_width="94dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_outline"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:transitionName="recipeImage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/recipe_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="2"
            android:layout_marginEnd="4dp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/like_iv"
            app:layout_constraintStart_toEndOf="@+id/recipe_iv"
            app:layout_constraintTop_toTopOf="@+id/recipe_iv"
            tools:text="Easy homemade beef burger" />

        <TextView
            android:id="@+id/author_name_tv"
            android:layout_width="0dp"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/recipe_iv"
            app:layout_constraintEnd_toEndOf="@+id/recipe_name_tv"
            app:layout_constraintStart_toStartOf="@+id/recipe_name_tv"
            tools:text="by Lance Bogrol" />

        <ImageView
            android:id="@+id/like_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/heart_icon_48"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/like" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
